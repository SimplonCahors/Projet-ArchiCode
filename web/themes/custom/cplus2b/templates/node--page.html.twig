<article{{ attributes }}>

  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer>
      {{ author_picture }}
      <div{{ author_attributes }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}

  <div{{ content_attributes }}>
  {{ content.field_image_ }}
  <div class="deuxblocs">
    {{ content.field_bloc_ }}
    {{ content.field_bloc_droit }}
  </div>
    {{ content |without('field_bloc_','field_bloc_droit','field_image_')}}
  </div>

</article>
